Algoritmo "semnome"

Var

  // Seção de Declarações das variáveis

   num1, num2, num3: inteiro
   soma, subtracao, multiplicacao: inteiro

Inicio

  //entrada de dados

      escreval("Vamos fazer algumas operacoes!")

      escreva("Digite o primeiro numero: ")
        leia(num1)

      escreva("Digite o segundo numero: ")
        leia(num2)
        
      escreva("Digite o ultimo numero: ")
        leia(num3)
        
        //processamento de dados: soma
        
        soma <- num1 + num2 + num3
        
       //saída de dados
       escreval("Soma = ", soma)
       
       escreval("Para a subtracao, faca de novo")
       
       escreva("Digite o primeiro numero: ")
         leia(num1)
         
       escreva("Digite o segundo numero: ")
         leia(num2)
         
       escreva("Digite o ultimo numero: ")
         leia(num3)

         //processamento de dados: subtracao
         
         subtracao <- num1 - num2 - num3

         //saída de dados
         
   escreval("Subtracao = ", subtracao)
         
   escreval("Para a multiplicacao, faca uma ultima vez")
         
      escreva("Digite o primeiro numero: ")
         leia(num1)

      escreva("Digite o segundo numero: ")
         leia(num2)

      escreva("Digite o ultimo numero: ")
         leia(num3)
         
         //processamento de dados: multiplicacao
         
         multiplicacao <- num1 * num2 * num3
         
         escreval("Multiplicacao = ", multiplicacao)
         
         escreva("Parabens!")
         
Fimalgoritmo
